<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></LinearLayout>

    <RadioGroup
        android:id="@+id/bottom_toolbar_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <RadioButton
            android:id="@+id/main"
            android:text="首页"
            android:drawableTop="@drawable/bottom_toolbar_main_image_selector"
            style="@style/bottom_radio_button_style"/>

        <RadioButton
            android:id="@+id/social"
            android:text="分类"
            android:drawableTop="@drawable/bottom_toolbar_social_image_selector"
            style="@style/bottom_radio_button_style"/>

        <RadioButton
            android:id="@+id/people"
            android:text="购物车"
            android:drawableTop="@drawable/bottom_toolbar_people_image_selector"
            style="@style/bottom_radio_button_style"/>


        <RadioButton
            android:id="@+id/person"
            android:text="我的"
            android:drawableTop="@drawable/bottom_toolbar_person_image_selector"
            style="@style/bottom_radio_button_style"/>

    </RadioGroup>

</LinearLayout>